<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.UpdateStudentDialog">

    <TextView
        android:id="@+id/tv_addStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Update Student"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/et_nameStudent"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:hint="name student"
        android:background="@drawable/custom_input"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addStudent" />
    <EditText
        android:id="@+id/et_gradeStudent"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:hint="grade"
        android:background="@drawable/custom_input"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nameStudent" />
    <EditText
        android:id="@+id/et_scoreMath"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:hint="math"
        app:layout_constraintHorizontal_bias="0.2"
        android:background="@drawable/custom_input"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_gradeStudent" />
    <EditText
        android:id="@+id/et_scorePhysic"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:hint="physic"
        app:layout_constraintHorizontal_bias="0.2"
        android:background="@drawable/custom_input"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_scoreMath" />
    <EditText
        android:id="@+id/et_scoreChemistry"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:hint="chemistry"
        app:layout_constraintHorizontal_bias="0.2"
        android:background="@drawable/custom_input"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_scorePhysic" />
    <EditText
        android:id="@+id/et_scoreEnglish"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:hint="english"
        app:layout_constraintHorizontal_bias="0.2"
        android:background="@drawable/custom_input"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/et_scoreMath"
        app:layout_constraintTop_toBottomOf="@+id/et_gradeStudent" />
    <EditText
        android:id="@+id/et_scoreLiterature"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:hint="literature"
        app:layout_constraintHorizontal_bias="0.2"
        android:background="@drawable/custom_input"
        android:inputType="numberDecimal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/et_scorePhysic"
        app:layout_constraintTop_toBottomOf="@+id/et_scoreEnglish" />
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btnUpdate"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="update"
        android:background="@drawable/border"
        />

</androidx.constraintlayout.widget.ConstraintLayout>